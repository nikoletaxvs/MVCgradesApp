@model User
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Δημιουργία Λογαριασμού</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Litera.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GradesApp.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
<div class="container mt-4 w-75 shadow-sm p-3 mb-5 bg-body rounded ">
        <div class="row">
        <div class="col">
                <h2 class="text-primary">Εγγραφή νέου χρήστη</h2>
            <hr />
            <form method="post" class="mt-4 mb-4">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Όνομα χρήστη</label>
                    <input asp-for="Username" class="form-control" id="Username" aria-describedby="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Κωδικός Πρόσβασης</label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <label asp-for="Role" class="form-label">Ρόλος χρήστη</label>
                <select asp-for="Role" class="form-select" aria-label="Επέλεξε ρόλο">
                    <option value="Student" selected>Φοιτητής</option>
                    <option value="Professor">Καθηγητής</option>
                    <option value="Secretary">Γραμματέας</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
                <button type="submit" class="btn btn-primary mt-4 col-12">Ολοκλήρωση Εγγραφής</button>
            </form>
        </div>
         <div class="col">
                <img src="/images/signUp.jpg" alt="" class="img-fluid" />
            </div>
        </div>
</div>
</body>
<footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</footer>
</html>
